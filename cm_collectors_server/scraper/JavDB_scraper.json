{
  "name": "javdb_scraper",
  "cache_enabled": true,
  "proxy": {
    "enabled": false,
    "protocol": "http",
    "host": "127.0.0.1",
    "port": 8080
  },
  "file_patterns": ["([A-Z0-9]+-[0-9]+)", "([a-z0-9]+-[0-9]+)"],
  "headers": {
    "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/118.0.0.0 Safari/537.36",
    "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,image/avif,image/webp,image/apng,*/*;q=0.8,application/signed-exchange;v=b3;q=0.7",
    "Accept-Language": "zh-CN,zh;q=0.9,en;q=0.8",
    "Accept-Encoding": "gzip, deflate, br",
    "Connection": "keep-alive",
    "Upgrade-Insecure-Requests": "1",
    "Sec-Ch-Ua": "\"Chromium\";v=\"118\", \"Google Chrome\";v=\"118\", \"Not=A?Brand\";v=\"99\"",
    "Sec-Ch-Ua-Mobile": "?0",
    "Sec-Ch-Ua-Platform": "\"Windows\"",
    "Sec-Fetch-Dest": "document",
    "Sec-Fetch-Mode": "navigate",
    "Sec-Fetch-Site": "none",
    "Sec-Fetch-User": "?1",
    "Cache-Control": "max-age=0"
  },
  "search": {
    "url": "https://javdb.com/search?q={id}&locale=zh",
    "selectors": {
      "selector": ".movie-list .item:first-child a",
      "type": "attribute",
      "attribute": "href"
    }
  },
  "sites": [
    {
      "name": "javdb_detail",
      "url": "https://javdb.com/{id}",
      "priority": 2,
      "selectors": {
        "id": {
          "selector": ".video-meta-panel .first-block .value",
          "type": "text"
        },
        "title": {
          "selector": "h2.title .current-title",
          "type": "text"
        },
        "description": {
          "selector": "meta[name='description']",
          "type": "attribute",
          "attribute": "content"
        },
        "premiered": {
          "selector": ".video-meta-panel .panel-block:contains('日期') .value",
          "type": "text"
        },
        "tags": {
          "selector": ".video-meta-panel .panel-block:contains('類別') .value a",
          "type": "array"
        },
        "actors": {
          "selector": ".video-meta-panel .panel-block:contains('演員') .value a",
          "type": "array"
        },
        "director": {
          "selector": ".video-meta-panel .panel-block:contains('導演') .value a",
          "type": "text"
        },
        "cover": {
          "selector": ".column-video-cover img.video-cover",
          "type": "attribute",
          "attribute": "src",
          "post_process": {
            "type": "filename"
          }
        },
        "cover_url": {
          "selector": ".column-video-cover img.video-cover",
          "type": "attribute",
          "attribute": "src",
          "post_process": {
            "type": "absolute_url"
          }
        },
        "runtime": {
          "selector": ".video-meta-panel .panel-block:contains('時長') .value",
          "type": "text"
        },
        "rating": {
          "selector": ".video-meta-panel .panel-block:contains('評分') .value",
          "type": "text"
        },
        "sample": {
          "selector": ".tile-images .tile-item",
          "type": "array",
          "attribute": "href",
          "post_process": {
            "type": "absolute_url"
          }
        }
      }
    }
  ]
}
