{
  "name": "avwikidb_actor_scraper",
  "cache_enabled": true,
  "file_patterns": ["([A-Z0-9]+-[0-9]+)", "([a-z0-9]+-[0-9]+)"],
  "headers": {
    "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/118.0.0.0 Safari/537.36",
    "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,image/avif,image/webp,image/apng,*/*;q=0.8",
    "Accept-Language": "ja-JP,ja;q=0.9,en;q=0.8",
    "Accept-Encoding": "gzip, deflate, br",
    "Connection": "keep-alive",
    "Upgrade-Insecure-Requests": "1"
  },
  "search": {
    "url": "https://avwikidb.com/actor/search/?q={id}",
    "selectors": {
      "selector": "main ul li:first-child a",
      "type": "attribute",
      "attribute": "href"
    }
  },
  "sites": [
    {
      "name": "avwikidb_actor_detail",
      "url": "https://avwikidb.com{id}",
      "priority": 2,
      "selectors": {
        "avatar": {
          "selector": "div.mt-2.mb-3 img.rounded-lg",
          "type": "attribute",
          "attribute": "src"
        },
        "name": {
          "selector": "div.mt-2.mb-3 h1",
          "type": "text"
        },
        "alias": {
          "selector": "div.mt-2.mb-3 div.text-sm:contains('別名')",
          "type": "text",
          "post_process": {
            "type": "regexp",
            "pattern": "別名: (.+)"
          }
        },
        "full": {
          "selector": "div.mt-2.mb-3 div.text-sm:contains('身長')",
          "type": "text"
        },
        "height": {
          "selector": "div.mt-2.mb-3 div.text-sm:contains('身長')",
          "type": "text",
          "post_process": {
            "type": "regexp",
            "pattern": "T(\\d+)"
          }
        },
        "bust": {
          "selector": "div.mt-2.mb-3 div.text-sm:contains('身長')",
          "type": "text",
          "post_process": {
            "type": "regexp",
            "pattern": "B(\\d+)"
          }
        },
        "waist": {
          "selector": "div.mt-2.mb-3 div.text-sm:contains('身長')",
          "type": "text",
          "post_process": {
            "type": "regexp",
            "pattern": "W(\\d+)"
          }
        },
        "hip": {
          "selector": "div.mt-2.mb-3 div.text-sm:contains('身長')",
          "type": "text",
          "post_process": {
            "type": "regexp",
            "pattern": "H(\\d+)"
          }
        },
        "cup": {
          "selector": "div.mt-2.mb-3 div.text-sm:contains('身長')",
          "type": "text",
          "post_process": {
            "type": "regexp",
            "pattern": "B\\d+\\(?([A-Z])\\)?"
          }
        }
      }
    }
  ]
}
